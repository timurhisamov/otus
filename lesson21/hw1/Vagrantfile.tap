# -*- mode: ruby -*-
# vim: set ft=ruby :

MACHINES = {
:vm1 => {
  :box_name => "centos/7",
  :net => [
    {ip: '172.60.98.1', adapter: 2, netmask: "255.255.255.0", virtualbox__intnet: "internal-net"},
  ]
},
:vm2 => {
  :box_name => "centos/7",
  :net => [
    {ip: '172.60.98.5', adapter: 2, netmask: "255.255.255.0", virtualbox__intnet: "internal-net"},
  ]
},
}

Vagrant.configure("2") do |config|

  if Vagrant.has_plugin?("vagrant-proxyconf")
    config.proxy.http     = ENV['http_proxy']
    config.proxy.https    = ENV['https_proxy']
    config.proxy.no_proxy = ENV['no_proxy']
  end
  MACHINES.each do |boxname, boxconfig|
  config.vbguest.auto_update = true
  config.vm.box_check_update = false
  config.vm.define boxname do |box|
    box.vm.box = boxconfig[:box_name]
    box.vm.host_name = boxname.to_s
    config.vm.provider "virtualbox" do |v|
      v.memory = 256      
    end
    boxconfig[:net].each do |ipconf|
      box.vm.network "private_network", ipconf
    end
    
    if boxconfig.key?(:public)
      box.vm.network "public_network", boxconfig[:public]
    end
    box.vm.provision "shell", inline: <<-SHELL
    mkdir -p ~root/.ssh
      cp ~vagrant/.ssh/auth* ~root/.ssh
    SHELL
    
    case boxname.to_s
      when "vm1"
        box.vm.provision "shell", run: "always", inline: <<-SHELL
        yum install epel-release -y
        yum install openvpn iperf3 -y
        cp /vagrant/static.key /etc/openvpn/static.key
        echo "port 1194\nproto udp\ndev tap\nifconfig 10.0.0.1 255.255.255.240\nsecret static.key\ncomp-lzo\nstatus status /var/log/openvpn-status.log\nlog /var/log/openvpn.log\nverb 3"> /etc/openvpn/server.conf
        systemctl start openvpn@server
        iperf3 -s &
      SHELL
      when "vm2"
        box.vm.provision "shell", run: "always", inline: <<-SHELL
        yum install epel-release -y
        yum install openvpn -y
        cp /vagrant/static.key /etc/openvpn/static.key
        echo "dev tap\nproto udp\nremote 172.60.98.1 1194\nifconfig 10.0.0.2 255.255.255.240\nsecret static.key\ncomp-lzo\nverb 3\nstatus /var/log/openvpn-status.log\nlog /var/log/openvpn.log"> /etc/openvpn/client.conf
        systemctl start openvpn@client
        iperf3 -c 10.0.0.1 -t 30 -i 2
        arp -a
      SHELL
    end
  end
end
end